{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",  // MUDANÇA: baseUrl = raiz do projeto
    "paths": {
      "@/*": ["src/*"]  // MUDANÇA: @/ → src/
    },
    "types": ["vite/client"]
  },
  "include": ["src/**/*", "backend"],
  "exclude": ["node_modules"]
}